{
  "name": "robotpy-vscode",
  "displayName": "RobotPy",
  "description": "Commands and menus for RobotPy (FIRST Robotics Competition)",
  "version": "0.1.0",
  "publisher": "frc-2175",
  "repository": {
    "type": "git",
    "url": "https://github.com/frc-2175/robotpy-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pyproject.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "robotpy.sync",
        "title": "RobotPy: Sync",
        "icon": "$(sync)"
      },
      {
        "command": "robotpy.sim",
        "title": "RobotPy: Simulate",
        "icon": "$(vm)"
      },
      {
        "command": "robotpy.deploy",
        "title": "RobotPy: Deploy",
        "icon": {
          "dark": "$(robot)",
          "light": "$(robot)"
        }
      },
      {
        "command": "robotpy.deploySkipTests",
        "title": "RobotPy: Deploy (Skip Tests)",
        "icon": "$(robot)"
      }
    ],
    "submenus": [
      {
        "id": "robotpy.deployMenu",
        "label": "RobotPy: Deploy",
        "icon": "$(robot)"
      }
    ],
    "menus": {
      "robotpy.deployMenu": [
        {
          "command": "robotpy.deploy",
          "group": "1_deploy@1"
        },
        {
          "command": "robotpy.deploySkipTests",
          "group": "1_deploy@2"
        }
      ],
      "editor/title": [
        {
          "command": "robotpy.sim",
          "group": "navigation"
        },
        {
          "submenu": "robotpy.deployMenu",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "robotpy.deploy"
        },
        {
          "command": "robotpy.deploySkipTests"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
